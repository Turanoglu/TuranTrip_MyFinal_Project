@*@model TuranTrip.Models.Sınıflar.Hakkimizda*@

@using TuranTrip.Models.Sınıflar;
@model List<Hakkimizda>

@{
    ViewBag.Title = "AboutIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>AboutIndex Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Foto Url</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>


            <td>@x.ID</td>
            <td>@x.FotoUrl</td>
            <td>@x.Aciklama</td>
            <td><a href="/Admin/AboutSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/AboutGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
@if (Model.Count == 0)
{
    <center><div><a href="/Admin/AboutEkle/" class="btn btn-primary">Yeni About</a></div></center>
}

@model TuranTrip.Models.Sınıflar.Otel
@{
    ViewBag.Title = "YeniOtel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>YeniOtel</h2>
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Baslik)
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
    <br />

    <label>Blog Seç</label>
    <br />
    <select id="" name="BlogId">
        <option value="">Lütfen seçiniz</option>
        @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Bloglars)
        {
            <option value="@item.Value">@item.Text</option>
        }


    </select>
    <br />
    <br />
    @Html.LabelFor(x => x.OtelImage)
    @Html.TextAreaFor(x => x.OtelImage, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.OtelTemizlik)
    @Html.TextAreaFor(x => x.OtelTemizlik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.OtelPuan)
    @Html.TextAreaFor(x => x.OtelPuan, new { @class = "form-control" })
    <br />




    <button class="btn btn-primary">Otel Ekle</button>



</form>



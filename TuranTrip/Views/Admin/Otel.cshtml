                        {
                <option value="@item">@item</option>                }
                    </select>
                </div>*@



        </tr>
    }
</table>
<div>
    @Html.PagedListPager(Model, page => Url.Action("Otel", "Admin", new { page }), PagedListRenderOptions.TwitterBootstrapPagerAligned)
</div>

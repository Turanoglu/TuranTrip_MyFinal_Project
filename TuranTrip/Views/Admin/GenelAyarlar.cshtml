@using TuranTrip.Models.Sınıflar;
@model List<GenelAyarlar>
@{
    ViewBag.Title = "GenelAyarlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>GenelAyarlar</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>LOGO</th>
        <th>SÜPER BAŞLIK</th>
        <th>SÜPER AÇIKLAMA</th>
        <th>WHATSAPP</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>


            <td>@x.ID</td>
            <td>@x.Logo</td>
            <td>@x.SuperBaslik</td>
            <td>@x.SuperAciklama</td>
            <td>@x.Whatsapp</td>
            <td><a href="/Admin/GenelAyarSil/@x.ID" class=" btn btn-danger">Sil</a></td>
            <td><a href="/Admin/GenelAyarGetir/@x.ID" class="btn btn-success">Güncelle</a></td>




        </tr>
    }
</table>
@if (Model.Count == 0)
{
    <center><div><a href="/Admin/GenelAyarEkle/" class="btn btn-primary">Yeni GenelAyar</a></div></center>
}


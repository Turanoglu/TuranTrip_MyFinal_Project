@model TuranTrip.Models.Sınıflar.Restaurant
@{
    ViewBag.Title = "YeniRestaurant";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>YeniRestaurant</h2>
<br />

<form class="form-group" method="post">
    @Html.LabelFor(x => x.Baslik)
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
    <br />

    <label>Blog Seç</label>
    <br />
    <select id="" name="BlogId">
        <option value="">Lütfen seçiniz</option>
        @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Bloglars)
        {
            <option value="@item.Value">@item.Text</option>
        }


    </select>
    <br />
    <br />
    @Html.LabelFor(x => x.RestaurantImage)
    @Html.TextAreaFor(x => x.RestaurantImage, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.ServisHızı)
    @Html.TextAreaFor(x => x.ServisHızı, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.RestaurantPuan)
    @Html.TextAreaFor(x => x.RestaurantPuan, new { @class = "form-control" })
    <br />




    <button class="btn btn-primary">Restaurant Ekle</button>



</form>

